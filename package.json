{
  "name": "battlebird",
  "version": "0.0.2",
  "description": "Secured Communication with great Ethereum Synergy",
  "main": "./index.js",
  "browser": "./index.js",
  "scripts": {
    "postinstall": "tsc",
    "test": "npm run lint && jest --coverage",
    "lint": "tslint --format verbose --project .",
    "codecov": "codecov",
    "doc": "typedoc --out ./generated_doc --mode file ./ts_sources/ --theme ./node_modules/typedoc-thunder-theme/bin/default/ --name 'Battlebird'"
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Horyus/battlebird.git"
  },
  "keywords": [
    "communication",
    "ethereum",
    "p2p",
    "ecdsa",
    "ecdh",
    "direct",
    "utp"
  ],
  "author": "Horyus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Horyus/battlebird/issues"
  },
  "homepage": "https://github.com/Horyus/battlebird#readme",
  "devDependencies": {
    "codecov": "^3.0.4",
    "jest": "^23.2.0",
    "linted": "^1.0.4",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "typedoc": "^0.11.1",
    "typedoc-thunder-theme": "0.0.1"
  },
  "dependencies": {
    "@types/node": "^10.5.1",
    "eccrypto": "^1.0.3",
    "ethereum-address": "0.0.4",
    "ethers": "^4.0.7",
    "int64-buffer": "^0.99.1007",
    "js-sha3": "^0.8.0",
    "typescript": "^2.9.2",
    "web3-utils": "^1.0.0-beta.35"
  }
}
